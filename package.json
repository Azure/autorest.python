{
    "name": "@azure-tools/python-codegen-monorepo",
    "private": true,
    "version": "0.1.0",
    "description": "Monorepo for python codegen",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "preinstall": "npx only-allow pnpm",
        "watch": "tsc --build ./tsconfig.ws.json --watch",
        "build": "pnpm -r run build",
        "clean": "pnpm -r run clean",
        "lint": "pnpm -r run lint",
        "format": "npx prettier **/*.ts --write",
        "check-format": "npx prettier **/*.ts --check",
        "check-version-mismatch": "syncpack list-mismatches",
        "fix-version-mismatch": "syncpack fix-mismatches"
    },
    "engines": {
        "node": ">=16.0.0",
        "pnpm": ">=7.5.2"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Azure/autorest.python.git"
    },
    "author": "Microsoft",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Azure/autorest.python/issues"
    },
    "homepage": "https://github.com/Azure/autorest.python#readme",
    "devDependencies": {
        "@cadl-lang/prettier-plugin-cadl": "~0.38.0",
        "eslint": "^8.23.1",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-unicorn": "^43.0.2",
        "prettier": "^2.7.1",
        "typescript": "^4.8.3",
        "syncpack": "^8.2.4"
    },
    "peerDependencies": {
        "prettier": "^2.7.1",
        "typescript": "^4.8.3"
    },
    "syncpack": {
        "workspace": false
    }
}
