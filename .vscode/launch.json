{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Generate typespec",
            "request": "launch",
            "cwd": "${workspaceFolder}/packages/typespec-python",
            "args": [
                "compile",
                "${workspaceFolder}/packages/typespec-python/node_modules/@azure-tools/cadl-ranch-specs/http/azure/core",
                 "--emit",
                 "${workspaceFolder}/packages/typespec-python/dist/src/index.js",
                 "--option=@azure-tools/typespec-python.debug=true"
            ],
            "program": "${workspaceFolder}/packages/typespec-python/node_modules/@typespec/compiler/dist/core/cli/cli.js",
            "skipFiles": ["<node_internals>/**"],
            "type": "node",
            "smartStep": true,
            "sourceMaps": true,
          },
          {
            "name": "Python: Attach",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "localhost"
          }
    ]
}
